{
  "manifest_version": 3,
  "name": "Wise Voice Extension",
  "version": "1.0.0",
  "description": "Record voice notes and upload them as PDF bills to Wise",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.wise.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.wise.com/*"],
      "js": ["libs/jspdf.umd.min.js", "content-script.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
